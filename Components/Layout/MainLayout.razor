@inherits LayoutComponentBase

<main class="text-gray-800 dark:text-white">
    <article class="container max-w-[85rem] mx-auto px-4">
        <div class="float-right text-xs uppercase font-medium leading-7">
            <a href="/" class="text-gray-800 dark:hidden">
                <img src="/pointpingparty-cactus-light.svg" alt="Pointing Party" style="height: 1.75rem;" />
            </a>
            <a href="/" class="text-gray-400 hidden dark:block">
